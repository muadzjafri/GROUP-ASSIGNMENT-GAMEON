<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#121212"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_ticket"
        android:layout_marginBottom="24dp"
        app:tint="#FF6D00"/>
    <TextView
        android:id="@+id/tvVenueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvVenueAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 Jalan Sport, Shah Alam"
        android:textSize="14sp"
        android:textColor="#B0BEC5"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvVenueRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 4.5 â­"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvVenueDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Description goes here."
        android:textSize="16sp"
        android:textColor="#BDBDBD"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book This Venue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FF6D00"
        android:textColor="#FFFFFF"/>

</LinearLayout>