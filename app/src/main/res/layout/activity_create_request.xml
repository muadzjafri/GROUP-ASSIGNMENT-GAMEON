<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Teammates"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnImport"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Link from My Bookings (Optional)"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            android:backgroundTint="#1E88E5"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sport (e.g. Futsal)"
            android:textColor="#FFFFFF"
            android:textColorHint="#757575"
            android:backgroundTint="#FF6D00"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Venue Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#757575"
            android:backgroundTint="#FF6D00"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time (e.g. 8:00 PM)"
            android:textColor="#FFFFFF"
            android:textColorHint="#757575"
            android:backgroundTint="#FF6D00"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skill (e.g. Beginner)"
            android:textColor="#FFFFFF"
            android:textColorHint="#757575"
            android:backgroundTint="#FF6D00"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Players Needed:"
            android:textColor="#BDBDBD"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#212121"
                app:cornerRadius="12dp"/>

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FF6D00"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#212121"
                app:cornerRadius="12dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Post Request"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#FF6D00"/>

    </LinearLayout>
</ScrollView>